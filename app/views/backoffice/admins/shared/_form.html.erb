<!-- Breadcrumbs-->
<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <%= link_to  "Dashboard", backoffice_path %>
  </li>
  <li class="breadcrumb-item">
    <%= link_to  "Administradores", backoffice_admins_path %>
  </li>
  <li class="breadcrumb-item active"><%= action %></li>
</ol>

<div class="col-sm-10 offset-1">
  <% if @admin.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @admin.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="card mt-5 mb-5">
    <div class="card-header"><%= action %></div>
      <div class="card-body">
        <div class="col-lg-8">
          <%= form_for([:backoffice, @admin]) do |f| %>
            <div class="form-group">
              <div class="form-label-group">
                <%= f.text_field :email, id:"email", class:"form-control", placeholder:"Ex.: seunome@aomercado.com", required:"required", autofocus:"autofocus" %>
                <label for="email">Email do Administrador</label>
              </div>
            </div>
            <div class="form-group">
              <div class="form-label-group">
                <%= f.password_field :password, id:"password", class:"form-control", placeholder:"Senha", required:"required", autofocus:"autofocus" %>
                <label for="password">Senha</label>
              </div>
            </div>
            <div class="form-group">
              <div class="form-label-group">
                <%= f.password_field :password_confirmation, id:"password_confirmation", class:"form-control", placeholder:"Confirmação da senha", required:"required", autofocus:"autofocus" %>
                <label for="password_confirmation">Confirmação da senha</label>
              </div>
            </div>
            
            <button type="submit" class="btn btn-primary">Cadastrar</button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
