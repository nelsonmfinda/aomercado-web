<!-- Breadcrumbs-->
<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <%= link_to  "Dashboard", backoffice_path %>
  </li>
  <li class="breadcrumb-item">
    <%= link_to  "Categories", backoffice_categories_path %>
  </li>
  <li class="breadcrumb-item active">Edit Category</li>
</ol>
<h1>Backoffice::Categories#edit</h1>

<div class="col-sm-10 offset-1">
  <div class="card mt-5 mb-5">
    <div class="card-header">Editar Categoria</div>
      <div class="card-body">
        <div class="col-lg-8">
          <%= form_for([:backoffice, @category]) do |f| %>
            <div class="form-group">
              <div class="form-label-group">
                <%= f.text_field :description, id:"name", class:"form-control", placeholder:"Ex.: Animais/Pet", required:"required", autofocus:"autofocus" %>
                <label for="name">Nome da categoria</label>
              </div>
            </div>
            <button type="submit" class="btn btn-primary">Cadastrar</button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
